#Gmail account
defaults
logfile ~/msmtp.log

account gmail
host smtp.gmail.com
from <REDACTED-GMAIL>@gmail.com
auth on
tls on
tls_trust_file /opt/local/share/curl/curl-ca-bundle.crt
user <REDACTED-GMAIL>@gmail.com
port 587

account lionmail
host smtp.gmail.com
from <REDACTED-LIONMAIL>@columbia.edu
auth on
tls on
tls_trust_file /opt/local/share/curl/curl-ca-bundle.crt
user <REDACTED-LIONMAIL>@columbia.edu
port 587

account default: gmail
